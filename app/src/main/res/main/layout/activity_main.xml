<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bindRuntimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="bindRuntimeText" />

    <TextView
        android:id="@+id/bindCompileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bindRuntimeText"
        tools:text="bindCompileText" />

    <TextView
        android:id="@+id/bindCompileText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bindCompileText"
        tools:text="bindCompileText2" />

    <Button
        android:id="@+id/openConstraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openConstraint"
        android:text="Open ConstraintActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/openViewSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openViewSwitcher"
        android:text="Open ViewSwitcherActivity"
        app:layout_constraintBottom_toTopOf="@id/openConstraint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openImageScaleType"
        android:text="Open ImageScaleTypeActivity"
        app:layout_constraintBottom_toTopOf="@id/openViewSwitcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>