<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRoot"
    android:background="#60000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/viewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"
            android:textColor="#F9C249"
            android:textSize="30sp"
            tools:text="点个赞"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/viewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:includeFontPadding="false"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:text="完成任务了，继续加油！"
            tools:visibility="visible" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/viewCircle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="120dp"
                android:src="@mipmap/star_circle"
                tools:visibility="visible" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/viewThumb"
                    android:layout_width="77dp"
                    android:layout_height="104dp"
                    android:layout_marginLeft="86dp"
                    android:layout_marginTop="115dp"
                    android:src="@mipmap/star_thumb"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/viewLight"
                    android:layout_width="77dp"
                    android:layout_height="104dp"
                    android:layout_marginLeft="86dp"
                    android:layout_marginTop="115dp"
                    android:src="@drawable/star_anim_light"
                    android:visibility="invisible"
                    tools:visibility="visible" />

            </FrameLayout>

            <ImageView
                android:id="@+id/viewStarOne"
                android:layout_width="27dp"
                android:layout_height="31dp"
                android:layout_marginTop="180dp"
                android:src="@mipmap/star_one"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/viewStarTwo"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="130dp"
                android:src="@mipmap/star_two"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/viewStarThree"
                android:layout_width="10dp"
                android:layout_height="11dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="110dp"
                android:src="@mipmap/star_three"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/viewStarDefault"
                android:layout_width="236.5dp"
                android:layout_height="185dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:src="@mipmap/star_default"
                tools:visibility="visible" />

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>