<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.common.ui.titlebar.TitleBarView
        android:id="@+id/test_util_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_bar_title="TestUtilActivity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/test_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:hint="测试软键盘的显隐" />

                <Button
                    android:id="@+id/test_edit_toggle_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="testEditToggle"
                    android:text="显示软键盘"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/test_fill_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="测试数据填充占位"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="testDataFill"
                    android:text="生成"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/test_cache_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="应用缓存："
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/test_cache_clear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="testClearCache"
                    android:text="显示缓存"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/test_sp_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="测试SharedPreferences："
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/test_sp_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="testSP"
                    android:text="写入文件"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="testNetwork"
                android:text="测试网络相关"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="testFilesDownload"
                android:text="测试多文件下载（支持单文件下载）"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/test_rx_bus_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="testRxBus"
                android:text="发送RxBus事件"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="testCameraRequest"
                    android:text="申请摄像头权限"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="testCamera"
                    android:text="测试摄像头权限"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/test_calculate_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="testCalculateAge"
                android:text="计算年龄"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/test_num_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="testNumFormat"
                android:text="数字格式化"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.example.learn.ui.FqxyiRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"/>

                <Button
                    android:layout_toRightOf="@id/tv_test"
                    android:layout_width="300dp"
                    android:text="哈哈"
                    android:layout_height="50dp"/>

            </com.example.learn.ui.FqxyiRelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
