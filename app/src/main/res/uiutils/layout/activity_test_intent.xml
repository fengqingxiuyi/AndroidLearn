<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.common.ui.titlebar.TitleBarView
        android:id="@+id/test_intent_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_bar_title="TestIntentActivity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="setting"
                android:text="跳转到系统的设置页面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="wifiSetting"
                android:text="跳转到系统的WLAN界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="deviceInfoSetting"
                android:text="跳转到系统的手机状态界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="appDevelopSetting"
                android:text="跳转到系统的开发者选项页面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="appSetting"
                android:text="跳转到系统的应用程序列表界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="appDetailSetting"
                android:text="跳转到系统的应用信息页面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showTel"
                android:text="调出系统的拨号界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSMS"
                android:text="调出系统的短信发送界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showCamera"
                android:text="调出系统的相机界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showGallery"
                android:text="调出系统的相册界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showRecorder"
                android:text="调出系统的录音机界面"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="callSearch"
                android:text="调用系统的搜索功能"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="callWeb"
                android:text="调用系统的浏览网页功能"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="callShare"
                android:text="调用系统的分享功能"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
