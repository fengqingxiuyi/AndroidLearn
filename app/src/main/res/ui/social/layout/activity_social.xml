<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享"
        android:onClick="jump2Share"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享到QQ"
        android:onClick="jump2ShareQQ"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="授权"
        android:onClick="jump2Auth"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="授权到QQ"
        android:onClick="jump2AuthQQ"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付"
        android:onClick="jump2Pay"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付到微信"
        android:onClick="jump2PayWX"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到第二个Activity"
        android:onClick="jump2SecondActivity"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

</LinearLayout>